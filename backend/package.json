{
  "name": "the-date-crew-backend",
  "version": "1.0.0",
  "main": "dist/server.js",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "start": "nodemon --exec ts-node src/server.ts",
    "dev:server": "nodemon --watch './**/*.ts' --exec 'node --experimental-specifier-resolution=node --trace-warnings --loader ts-node/esm' src/server.ts ",
    "format": "prettier --write \"app/**/*.{js,jsx,json,md,ts,tsx}\"",
    "lint": "eslint index.js App.js app --fix --ext .js,.ts,.tsx  --max-warnings 0 && yarn format",
    "start:server": "pm2 start src/server.ts --name my-node-app --interpreter ts-node",
    "stop": "pm2 stop my-node-app",
    "restart": "pm2 restart my-node-app",
    "logs": "pm2 logs my-node-app",
    "build": "tsc",
    "run-app": "node dist/server.js"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "4.17.17",
    "@types/joi": "^17.2.3",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/multer": "1.4.12",
    "@types/node": "^20.5.0",
    "@types/node-cron": "^3.0.11",
    "@typescript-eslint/eslint-plugin": "^6.3.0",
    "@typescript-eslint/parser": "^6.3.0",
    "eslint": "^8.47.0",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "tslib": "^2.6.2",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "axios": "^1.8.3",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.3",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.4.7",
    "express": "^4.18.2",
    "follow-redirects": "^1.15.3",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.4.3",
    "mqtt": "^5.0.3",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3"
  },
  "resolutions": {
    "@types/express": "4.17.17"
  }
}
